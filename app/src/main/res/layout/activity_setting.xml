<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    tools:context=".ui.me.SettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@id/toolbar"
        style="@style/toolbar_style">

        <TextView
            android:id="@id/tv_title"
            style="@style/title_style"
            android:text="设置" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@color/textColorDarkc"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:background="@color/bg_gray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_setting_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="14dp"
                android:paddingTop="16dp"
                android:text="收款账号  "
                android:textColor="@color/textColorDark3"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:maxLines="2"
                android:paddingRight="14dp"
                android:text="(在后台管理系统中设置)"
                android:textColor="#ff0000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting_item11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:lines="1"
                android:paddingBottom="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp"
                android:text="支付宝 "
                android:textColor="@color/textColorDark3" />

            <TextView
                android:id="@+id/tv_setting_item11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:lines="1"
                android:paddingBottom="15dp"
                android:paddingLeft="24dp"
                android:paddingRight="14dp"
                android:paddingTop="15dp"
                android:text="未设置 "
                android:textColor="@color/textColorDark3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting_item12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:background="@color/bg_defult"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:lines="1"
                android:paddingBottom="15dp"
                android:paddingLeft="24dp"
                android:paddingRight="14dp"
                android:paddingTop="15dp"
                android:text="微信 "
                android:textColor="@color/textColorDark3" />

            <TextView
                android:id="@+id/tv_setting_item12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:lines="1"
                android:paddingBottom="17dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="17dp"
                android:text="未设置 "
                android:textColor="@color/textColorDark3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting_item13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:background="@color/bg_defult"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:lines="1"
                android:paddingBottom="15dp"
                android:paddingLeft="24dp"
                android:paddingRight="14dp"
                android:paddingTop="15dp"
                android:text="银行卡 "
                android:textColor="@color/textColorDark3" />

            <TextView
                android:id="@+id/tv_setting_item13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:lines="1"
                android:paddingBottom="17dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="17dp"
                android:text="未设置 "
                android:textColor="@color/textColorDark3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:background="@color/bg_gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="14dp"
                android:paddingTop="12dp"
                android:text="服务管理  "
                android:textColor="@color/textColorDark3"
                android:textSize="15dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/btv_go_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:drawableRight="@mipmap/icon_more"
            android:foreground="?attr/selectableItemBackground"
            android:lines="1"
            android:padding="14dp"
            android:text="通知服务"
            android:textColor="@color/textColorDark3" />

         <TextView
            android:id="@+id/btv_go_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:drawableRight="@mipmap/icon_more"
            android:foreground="?attr/selectableItemBackground"
            android:lines="1"
            android:padding="14dp"
            android:text="权限设置"
            android:textColor="@color/textColorDark3" />

        <TextView
            android:id="@+id/btv_change_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:drawableRight="@mipmap/icon_more"
            android:foreground="?attr/selectableItemBackground"
            android:lines="1"
            android:padding="14dp"
            android:text="切换账号"
            android:textColor="@color/textColorDark3" />

    </LinearLayout>


</RelativeLayout>

