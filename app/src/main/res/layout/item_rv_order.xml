<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/bg_defult"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_setting_item11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rv_order_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:padding="12dp"
            android:text="订单编号: -- "
            android:textColor="@color/textColorDark6" />

        <TextView
            android:id="@+id/tv_rv_trade_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:lines="1"
            android:paddingLeft="4dp"
            android:paddingRight="12dp"
            android:text="成功"
            android:textColor="#7BA0FE" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/textColorDarkc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="14dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rv_order_total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="定价:-- 元" />

            <TextView
                android:id="@+id/tv_rv_order_dis_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical|left"
                android:text="折扣: -- 元" />

            <TextView
                android:id="@+id/tv_rv_order_real_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical|left"
                android:text="实收: -- 元" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_rv_order_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="手续费: -- 元" />

            <TextView
                android:id="@+id/tv_rv_order_pay_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical|left"
                android:text="支付方式: -- " />

            <TextView
                android:id="@+id/tv_rv_order_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical|left"
                android:text="收款账户: -- " />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/textColorDarkc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_rv_order_create_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下单时间: -- "
            android:textColor="@color/textColorDark6" />

        <Button
            android:id="@+id/btn_do"
            style="@style/base_button_style"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="重发通知"
            android:textSize="@dimen/text_size_15sp" />
    </LinearLayout>

</LinearLayout>