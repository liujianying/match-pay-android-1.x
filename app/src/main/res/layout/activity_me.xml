<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.login.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@id/toolbar"
        style="@style/toolbar_style">

        <TextView
            android:id="@id/tv_title"
            style="@style/title_style"
            android:text="个人中心" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        android:minHeight="430dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@mipmap/bg"
                android:gravity="center"
                android:minHeight="300dp"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="--"
                    android:textColor="@color/textColorDark3"
                    android:textSize="@dimen/text_size_15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/bg_blue"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_setting_item11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1px"
                        android:background="@color/white"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:lines="1"
                            android:text="当前监控的支付宝"
                            android:textColor="@color/textColorDark3" />

                        <TextView
                            android:id="@+id/tv_setting_item11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="6dp"
                            android:gravity="right|end"
                            android:maxLines="1"
                            android:paddingBottom="4dp"
                            android:paddingLeft="24dp"
                            android:paddingTop="4dp"
                            android:text="未设置 "
                            android:textColor="@android:color/holo_red_dark"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_setting_item12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1px"
                        android:background="@color/bg_defult"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:lines="1"
                            android:text="当前监控的微信"
                            android:textColor="@color/textColorDark3" />

                        <TextView
                            android:id="@+id/tv_setting_item12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|end"
                            android:maxLines="2"
                            android:paddingBottom="4dp"
                            android:paddingLeft="24dp"
                            android:paddingTop="4dp"
                            android:text="未设置 "
                            android:textColor="@android:color/holo_red_dark"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_setting_item13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1px"
                        android:background="@color/bg_defult"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:lines="1"
                            android:text="当前监控的银行卡 "
                            android:textColor="@color/textColorDark3" />

                        <TextView
                            android:id="@+id/tv_setting_item13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|end"
                            android:maxLines="2"
                            android:paddingBottom="4dp"
                            android:paddingLeft="24dp"
                            android:paddingTop="4dp"
                            android:text="未设置 "
                            android:textColor="@android:color/holo_red_dark"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_go_order_list"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/icon_me_a" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="查看订单"
                            android:textColor="@color/textColorDark3"
                            android:textSize="@dimen/text_size_15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_go_self_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/icon_me_b" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="个人资料"
                            android:textColor="@color/textColorDark3"
                            android:textSize="@dimen/text_size_15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_go_setting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/icon_me_c" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="设置"
                            android:textColor="@color/textColorDark3"
                            android:textSize="@dimen/text_size_15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_go_setting_guide"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/icon_me_c" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="设置教程"
                            android:textColor="@color/textColorDark3"
                            android:textSize="@dimen/text_size_15sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_me_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ima_head" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

