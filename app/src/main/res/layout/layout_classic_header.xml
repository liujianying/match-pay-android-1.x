<?xml version="1.0" encoding="utf-8"?>
<com.fintech.match.pay.common.widget.pullview.header.ClassicRefreshHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/refresh_header_height_twitter"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="28dp"
            android:layout_toLeftOf="@+id/ll_refresh"
            android:background="@mipmap/icon_pull_arrow"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="@dimen/pull_size_icon"
            android:layout_height="@dimen/pull_size_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="28dp"
            android:layout_toLeftOf="@+id/ll_refresh"
            android:background="@mipmap/icon_complete"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="@dimen/pull_size_icon"
            android:layout_height="@dimen/pull_size_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="28dp"
            android:layout_toLeftOf="@+id/ll_refresh" />

        <LinearLayout
            android:id="@+id/ll_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="left"
                android:text="让支付更便捷"
                android:textColor="@color/textColorDark6"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="3dp"
                android:text="下拉刷新"
                android:textColor="@color/textColorDark9"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>
</com.fintech.match.pay.common.widget.pullview.header.ClassicRefreshHeaderView>